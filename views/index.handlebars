
    <!-- Burgers EATEN CARD -->
    <div class="row center-cols">
        <div class="col m4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Burgers Eaten</span>
                    <form action="/api/burgers/" method="put" id="eaten-form">
                        {{#each burgers}}
                        {{#if devoured}}
                         {{>burger-block}}
                        {{/if}}
                        {{/each}}

                    </form>
                </div>             
                <div class="card-action">
                    <a class="change-burger" href="#" type="submit" class="change-state">Make Burger Again</a>
                    <a class="delete-burger" href="#" type="submit" class="change-state">DELETE</a>
                </div>



            </div>

            <!-- Burgers TO EAT CARD -->
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Eat one of these burgers!</span>
                    <form action="#">
                          {{#each burgers}}
                        {{#unless devoured}}
                         {{>burger-block}}
                        {{/unless}}
                        {{/each}}
                    </form>
                </div>
                <div class="card-action">
    
                    <a class="change-burger" href="#" type="submit" class="change-state">Try this Burger</a>
                      <a class="delete-burger" href="#" type="submit" class="change-state">DELETE</a>
                    
                </div>
                </div>



            </div>




        </div>
        <!-- SUBMIT Form -->
        <div class="row">
            <form class="col s6">
                <div class="row">
                    <div class="input-field col s6">
                        <!-- <i class="material-icons prefix">account_circle</i> -->
                        <input id="newBurgerText" type="text" class="validate">
                        <label for="newBurgerText">Burger Name</label>
                        <button class="btn waves-effect waves-light" type="button" name="new-burger" id="newBugerBtn">Submit
                        <i class="material-icons right">send</i>
                      </button>
                    </div>
                </div>
            </form>
        </div>


